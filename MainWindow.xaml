<Window x:Class="Tasky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tasky"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox HorizontalAlignment="Stretch"  Margin="10" x:Name="MyTextBox"/>
            <Button Click="Button_Click" HorizontalAlignment="Left" Margin="10">Add</Button>
            <ListBox VerticalAlignment="Stretch" ItemsSource="{Binding TaskControlList}">
               
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
